{
  "version": 8,
  "configurePresets": [
    {
      "name": "gcc-12-gpu-release",
      "displayName": "GCC 12.3.0 x86_64-linux-gnu",
      "description": "Using compilers: C = /usr/bin/gcc-12, CXX = /usr/bin/g++-12",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-12",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-12",
        "CMAKE_BUILD_TYPE": "Release",
        "Kokkos_ENABLE_CUDA": "ON"
      }
    }
  ]
}